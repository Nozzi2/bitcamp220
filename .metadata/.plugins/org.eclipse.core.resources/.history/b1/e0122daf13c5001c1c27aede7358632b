package inheritance;

class AA {
	protected int a = 3;
	
	public void disp() {
		a += 5;
		System.out.println("AA : "+a+" ");
	}
}

//---------------------------------

class BB extends AA {
	protected int a = 8;
	
	public void disp() {
		a += 5; //this.a = this.a+5;
		System.out.println("BB : "+a+" ");
	}
}

//---------------------------------
public class TestMain2 {

	public static void main(String[] args) {
		BB aa = new BB();
		aa.disp(); //BB : 13//
		System.out.println("aa : "+aa.a); //13
		
		AA bb = new BB();
		bb.disp(); //BB : 13
		System.out.println("bb : "+bb.a); //
		
		AA cc = new AA();
		cc.disp(); //AA : 8
		System.out.println("cc : "+cc.a); //8
		
		//자식 = (자식)부모
		BB dd = (BB)bb; //메모리에는 BB클래스의 데이터들이 등록이 되어있음
//		BB dd = (BB)cc; cc는 자식이 있는지 없는지도 모르기 때문에 캐스팅이 안됨
		dd.disp(); //BB : 13
		System.out.println("dd : "+dd.a); //
	}

}
